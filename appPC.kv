<Proba>:
    Screen:
        name: 'first_screen'
        FloatLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: 0.2, 0.6, 0.8, .6
                Rectangle:
                    pos: self.pos
                    size: self.size
            FitImage:
                source: "design//triskele.png"
                size_hint: .025, .025
                pos_hint: {"center_x": .69, "center_y": .875}
                color: [0, 0, 0, 1]
            Label:
                text: "German Language App"
                size_hint: 1, .3
                font_size: 35
                font_name: 'design//DirtyHeadline-x39K'
                pos_hint: {'center_x': .5, 'center_y': .9}
                halign: "center"
                valign: "center"
###############################################################################
            Label:
                text: "Start learning by putting german words and \ncroatian translations into your own dictionary!"
                font_name: 'design//DirtyHeadline-x39K'
                size_hint: .4, .23
                halign: "center"
                pos_hint: {'center_x': .2, 'center_y': .7}
            FitImage:
                source: "design//arrow_straight.png"
                pos_hint: {'center_x': .5, 'center_y': .72}
                size_hint: .2, .15
                md_bg_color: 0, 0, 0, 1
            MDButton:
                style: "tonal"
                pos_hint: {"center_x": .7, "center_y": .72}
                theme_text_color: "Custom"
                text_color: "black"
                on_release: root.current = "dictionary"
                MDButtonIcon:
                    icon: "library"
                MDButtonText:
                    text: "Wörterbuch"
###############################################################################
            Label:
                text: "Let app to choose random german word from your dictionary\n and check your translation knowledge!"
                font_name: 'design//DirtyHeadline-x39K'
                size_hint: .4, .23
                pos_hint: {'center_x': .25, 'center_y': .5}
                halign: "left"
            FitImage:
                source: "design//arrow_straight.png"
                pos_hint: {'center_x': .6, 'center_y': .52}
                size_hint: .2, .15
                md_bg_color: 0, 0, 0, 1
            MDButton:
                style: "tonal"
                pos_hint: {"center_x": .8, "center_y": .52}
                theme_text_color: "Custom"
                text_color: "black"
                on_release: root.current = "translation"
                MDButtonIcon:
                    icon: "translate"
                MDButtonText:
                    text: "Übersetzung"
###############################################################################
            Label:
                text: "Lastly, check your knowledge of irregular verbs in german!"
                font_name: 'design//DirtyHeadline-x39K'
                size_hint: .4, .23
                pos_hint: {'center_x': .25, 'center_y': .3}
                halign: "left"
            FitImage:
                source: "design//arrow_straight.png"
                pos_hint: {'center_x': .6, 'center_y': .32}
                size_hint: .2, .15
                md_bg_color: 0, 0, 0, 1
            MDButton:
                style: "tonal"
                pos_hint: {"center_x": .78, "center_y": .32}
                theme_text_color: "Custom"
                text_color: "black"
                on_release: root.current = "verbs"
                MDButtonIcon:
                    icon: "format-letter-spacing"
                MDButtonText:
                    text: "Verben"
###############################################################################
###############################################################################
    Screen:
        name: 'dictionary'
###############################################################################
        FitImage:
            source: "design//swiss_scenery.jpg"
            size_hint: 1, 1
            pos_hint: {"center_x": .5, "center_y": .5}
            color: [1, 1, 1, .4]
        MDTextField:
            id: german_word
