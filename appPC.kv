            size_hint_x: None
            width: "240dp"
            pos_hint: {"center_x": .3, "center_y": .6}
            write_tab: False
            theme_bg_color: "Custom"
            fill_color_normal: 0, 0, 0, .1
            fill_color_focus: 0, 0, 0, .1
            theme_text_color: "Custom"
            text_color_focus: "white"
            text_color_normal: "white"
            MDTextFieldHintText:
                text: "Deutsches Wort"
                text_color_normal: "white"
                text_color_focus: "white"
        MDTextField:
            id: croatian_word
