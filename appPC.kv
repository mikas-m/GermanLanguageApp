            MDButtonText:
                text: "Ein Wort löschen"
###############################################################################
        MDExtendedFabButton:
            pos_hint: {"center_x": .05, "center_y": .65}
            fab_state: 'expand'
            size_hint: .07, .05
            on_release: root.current = "first_screen"
            MDExtendedFabButtonIcon:
