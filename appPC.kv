            fill_color_focus: 0, 0, 0, .1
            theme_text_color: "Custom"
            text_color_focus: "white"
            text_color_normal: "white"
            MDTextFieldHintText:
                text: "Wort zum Löschen"
                text_color_normal: "white"
                text_color_focus: "white"
        MDLabel:
